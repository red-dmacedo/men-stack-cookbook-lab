<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/navbar.css">
  <link rel="stylesheet" href="/styles/general.css">
  <title>Create a New Recipe</title>
</head>
<body>
  <h1>Create a New Recipe</h1>
  <%- include('../partials/_navbar.ejs') %>
  <!-- Schema: name, instructions, owner, ingredients -->
  <form action="/recipes" method="POST" class="form-type1">
    <div>
      <label for="name">Recipe Name:</label>
      <input type="text" name="name" id="recipe-name" value="">
    </div>
    <label for="instructions">Instructions:</label>
    <textarea name="instructions" id="recipe-instructions"></textarea>
    <section class="input-ingredients">
      <label for="ingredients-select">Ingredients:</label>
      <div name="ingredients-select" class="ingredients-select">
        <% if(ingredients.length > 0){ %>
          <% for(let i of ingredients) { %>
            <input type="checkbox" class="ingredient-checkbox" name="ingredients" value="<%= i.name %>">
            <label for="<%= i.name %>"><%= i.name %></label><br>
          <% } %>
        <% } else { %>
          <p>You dont have any ingredients, Go <a href="/ingredients/new">create</a> some!</p>
        <% }; %>
      </div>
    </section>
    <button type="submit">Create</button>
  </form>
</body>
</html>